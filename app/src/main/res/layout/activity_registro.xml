<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rbTerceroautorizado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="miganado.Loginyregistro.RegistroActivity"
    android:elevation="1dp"
    android:clickable="true"
    android:background="@android:color/white">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_marginTop="51dp"
        android:id="@+id/etUsername"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Usuario o email"
        android:background="@android:color/background_light" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="21dp"
        android:id="@+id/etPassword"
        android:hint="Password"
        android:background="@android:color/background_light"
        android:layout_below="@+id/etUsername"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="25dp"
        android:id="@+id/etPassword2"
        android:background="@android:color/background_light"
        android:hint="Repetir Password"
        android:layout_below="@+id/etPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="26dp"
        android:id="@+id/etNombreyapellidos"
        android:hint="Nombre y apellidos"
        android:background="@android:color/background_light"
        android:layout_below="@+id/etPassword2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/rbtipotitular"
        android:layout_below="@+id/etNombreyapellidos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:text="Titular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbTitular"
            android:layout_weight="1" />

        <RadioButton
            android:text="Tercero Autorizado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbtercero"
            android:layout_weight="1" />
    </RadioGroup>

    <CheckedTextView
        android:text="CheckedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rbtipotitular"
        android:layout_alignRight="@+id/rbtipotitular"
        android:layout_alignEnd="@+id/rbtipotitular"
        android:layout_marginRight="58dp"
        android:layout_marginEnd="58dp"
        android:layout_marginTop="23dp"
        android:id="@+id/checkedTextView" />
</RelativeLayout>
