<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rbTerceroautorizado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="miganado.loginyregistro.RegistroActivity"
    android:elevation="1dp"
    android:clickable="true"
    android:background="@android:color/white">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_marginTop="51dp"
        android:id="@+id/etUsername"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Usuario o email"
        android:background="@android:color/background_light" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/etUsername"
        android:layout_marginTop="45dp"
        android:id="@+id/etPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Password"
        android:background="@android:color/background_light" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/etPassword"
        android:layout_marginTop="45dp"
        android:id="@+id/etPassword2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/background_light"
        android:hint="Repetir Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/etPassword2"
        android:layout_marginTop="40dp"
        android:id="@+id/etNombreyapellidos"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Nombre y apellidos"
        android:background="@android:color/background_light" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNombreyapellidos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/rbtipotitular">

        <RadioButton
            android:text="Titular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbTitular"
            android:layout_weight="1" />

        <RadioButton
            android:text="Tercero Autorizado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbtercero"
            android:layout_weight="1" />
    </RadioGroup>

    <CheckedTextView
        android:text="CheckedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rbtipotitular"
        android:layout_toLeftOf="@+id/rbtipotitular"
        android:layout_toStartOf="@+id/rbtipotitular"
        android:layout_marginTop="29dp"
        android:id="@+id/chkCrotaloriginal" />
</RelativeLayout>
