<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fichaanimal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="miganado.Operaciones.FichaanimalActivity"
    android:layout_gravity="center"
    android:weightSum="1"
    android:background="@android:color/background_dark">
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/GridLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        tools:context=".GridLayoutActivity" >

        <Button
            android:id="@+id/btnRestablecer"
            android:onClick="restablecer"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|top"
            android:layout_row="0"
            android:text="Restablecer"
            android:background="@color/MiGanado_primary_color_dark"/>

        <Button
            android:id="@+id/btnModificar"
            android:onClick="modificar"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_width="170dp"
            android:layout_row="1"
            android:text="Modificar"
            android:background="@color/MiGanado_primary_color_dark"/>

        <Button
            android:id="@+id/btnBaja"
            android:onClick="darBaja"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_width="170dp"
            android:layout_row="0"
            android:text="Dar baja"
            android:background="@color/MiGanado_primary_color" />

        <Button
            android:id="@+id/btnBorrar"
            android:onClick="borrar"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|top"
            android:layout_row="1"
            android:text="Eliminar"
            android:background="@color/MiGanado_primary_color"/>

    </GridLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ficha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>
    </ScrollView>

</LinearLayout>
