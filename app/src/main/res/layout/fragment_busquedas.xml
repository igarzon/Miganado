<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="miganado.Operaciones.Busquedas_Fragment">


    <Button
        android:text="Buscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickBuscar"
        android:id="@+id/btnBuscar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="144dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="12"
        android:id="@+id/etBuscarCrotal"
        android:hint="Crotal"
        android:background="@android:color/background_light"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:id="@+id/editText"
        android:hint="Crotal Madre"
        android:background="@android:color/background_light"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/etBuscarCrotal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/in_date"
        android:background="@android:color/background_light"
        android:layout_alignBaseline="@+id/btn_date"
        android:layout_alignBottom="@+id/btn_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT DATE"
        android:id="@+id/btn_date"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/in_date"
        android:layout_toEndOf="@+id/in_date" />


</RelativeLayout>
